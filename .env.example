# OTP Service Configuration Template
# Copy this file to .env and modify values as needed

# =============================================================================
# REDIS CONFIGURATION
# =============================================================================
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=
REDIS_INDICES=0-5
REDIS_KEY_PREFIX=
REDIS_TIMEOUT=5

# =============================================================================
# SERVER CONFIGURATION
# =============================================================================
SERVER_HOST=localhost
SERVER_PORT=8080
SERVER_MODE=test                    # release, test

# Server Timeouts (in seconds)
SERVER_TIMEOUT_READ=5
SERVER_TIMEOUT_WRITE=10
SERVER_TIMEOUT_IDLE=120
SERVER_TIMEOUT_READ_HEADER=2

# =============================================================================
# TLS CONFIGURATION
# =============================================================================
TLS_ENABLED=false
TLS_CERT_FILE=cert.pem
TLS_KEY_FILE=key.pem
TLS_CLIENT_CERTS=client_certs.pem

# =============================================================================
# APPLICATION CONFIGURATION
# =============================================================================
HASH_KEYS=true